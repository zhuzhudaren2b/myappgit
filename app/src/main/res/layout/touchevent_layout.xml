        android:layout_height="match_parent"
        android:id="@+id/grandpa_layout">

        <com.example.zhangzhu.myapplication.touchevent.ParentLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/parent_layout">

            <com.example.zhangzhu.myapplication.touchevent.MyTextView
